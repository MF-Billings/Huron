<?xml version="1.0" encoding="utf-8"?>
<!--NEW since Dec. 23 push-->
<!--creates a format for ListView rows that's easier to swipe
    must use "wrap_content for manager height in order for RecyclerView to display more than 1 item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/std_list_item_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>